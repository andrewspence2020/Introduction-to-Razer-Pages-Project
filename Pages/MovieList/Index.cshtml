@page
@model BookListRazar.MovieListModel
<br />
<div class=" container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Movie List</h2>

    </div>
    <div class="col-3">
        <a asp-page="CreateMovieList" class="btn btn-info form-check form-control text-white">Create New Movie</a>

    </div>
    <div class="col-3">
        <a asp-page="UpsertMovies" class="btn btn-info form-check form-control text-white">Add(Upsert) New Movie</a>

    </div>
    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Movies.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Movies.FirstOrDefault().MovieName"></label>
                        </th>
                        <th>
                            <label asp-for="Movies.FirstOrDefault().Director"></label>
                        </th>
                        <th>
                            <label asp-for="Movies.FirstOrDefault().ReleaseDate"></label>
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var item in Model.Movies)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.MovieName)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Director)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.ReleaseDate)
                            </td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger btn-sm text-white">Delete</button>
                                <button asp-page="EditMovieList" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit</button>
                            </td>
                        </tr>
                    }

                </table>
            }
            else
            {
                <p>Sorry No Movies Availible</p>
            }
        </form>

    </div>


</div>
<div class="col-12" style="text-align:center">
    <br />
    <span class="h3 text-info">OR</span>
    <br /><br />
</div>
<div class="col-12 border p-3">

    <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Movie Name</th>
                <th> Director</th>
                <th> Release Date</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>
@section Scripts{
    <script src="~/js/movieList.js"></script>
}

